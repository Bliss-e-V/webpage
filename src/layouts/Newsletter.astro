---
interface Props {
  title: string;
  subtitle: string;
}
const { title, subtitle }: Props = Astro.props;

import NewsHeader from "../components/newsletter/NewsHeader.astro";
import Footer from "../components/Footer.astro";
import NewsFooter from "@components/newsletter/NewsFooter.astro";

const canonicalURL = new URL(Astro.url.pathname, Astro.site)
  .toString()
  .replace(/\/$/, "");
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>
    <link rel="canonical" href={canonicalURL} />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="noindex, nofollow" />
</head>
  <body class="w-full">
    <NewsHeader title={subtitle} />
    <div class="container pt-20">
      <slot />
    </div>
    <NewsFooter />
  </body>
</html>


<style is:global>
  :root {
    --accent: #cb2d3e;
    --accent-dark: #3c0909;
    --accent-light: #ef473a;
    --background: #ffffff;
    --background-secondary: #101010;
    --primary: #000000;
    --secondary: #111111;
    --tertiary: #232323;
    --border: #171717;
    --bliss-red: #dc2626;
  }

  ::selection {
    background: var(--accent);
    color: white;
  }

  html {
    background-color: var(--background);
  }

  body {
    color: var(--primary);
    line-height: 2;
  }

  .bliss-red {
    color: var(--bliss-red);
  }

  .border-y-dark {
    border-top: var(--border) 1px solid;
    border-bottom: var(--border) 1px solid;
  }

  .container {
    width: 100%;
    padding-left: 20px;
    padding-right: 20px;
    margin: 0 auto;
  }
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>
