<style>
  @reference "../global.css";

  .links-page {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 480px;
    margin: 0 auto;
    padding: 0 1rem 4rem;
  }

  /* Profile */
  .profile {
    text-align: center;
    margin-bottom: 2rem;
  }

  .handle {
    margin-top: 0.75rem;
    letter-spacing: 0.02em;
  }

  .tagline {
    font-size: 0.95rem;
    color: var(--secondary);
    margin-top: 0.25rem;
    font-weight: 300;
  }

  /* Link buttons */
  .link-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    width: 100%;
  }

  .link-button {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    position: relative;
    width: 100%;
    padding: 1rem 1.5rem 1rem 3.5rem;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    color: var(--primary);
    font-size: 1.05rem;
    font-weight: 400;
    letter-spacing: 0.01em;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
  }

  .link-button:hover {
    background: linear-gradient(135deg, rgba(203, 45, 62, 0.15), rgba(239, 71, 58, 0.1));
    border-color: rgba(203, 45, 62, 0.4);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(203, 45, 62, 0.15);
  }

  /* Icons inside link buttons */
  .link-icon {
    position: absolute;
    left: 1.25rem;
    width: 22px;
    height: 22px;
    flex-shrink: 0;
    color: var(--secondary);
    transition: color 0.3s ease;
  }

  .link-button:hover .link-icon {
    color: var(--accent);
  }

  /* Entry animations */
  .profile,
  .link-button {
    opacity: 0;
    transform: translateY(16px);
    animation: fadeUp 0.5s ease forwards;
  }

  .profile { animation-delay: 0.1s; }
  .link-button:nth-child(1) { animation-delay: 0.15s; }
  .link-button:nth-child(2) { animation-delay: 0.2s; }
  .link-button:nth-child(3) { animation-delay: 0.25s; }
  .link-button:nth-child(4) { animation-delay: 0.3s; }
  .link-button:nth-child(5) { animation-delay: 0.35s; }
  .link-button:nth-child(6) { animation-delay: 0.4s; }
  .link-button:nth-child(7) { animation-delay: 0.45s; }
  .link-button:nth-child(8) { animation-delay: 0.5s; }

  @keyframes fadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
