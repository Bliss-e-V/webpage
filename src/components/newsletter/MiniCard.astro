---
// Import the necessary components or types
import { Headline } from "@components/Headline";
import type { Event } from "../data/event";
import { Image } from "astro:assets";

interface Props {
  event: Event;
}

// Define the props that this Astro component accepts
const { event } = Astro.props as Props;
---

<div class="group no-underline w-full">
  <div class="hover:bg-li py-1 rounded p-4">
    <a href={event.url} class="no-underline rounded-lg">
      <div
        class="flex flex-col sm:flex-row sm:space-x-10 sm:items-center sm:max-h-min no-underline"
      >
        <div class={`flex flex-col`}>
          <div class="flex items-center space-x-1">
            <p class="text-tertiary">
              {
                event.date.toLocaleString("en-US", {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                })
              }
            </p>
          </div>
          <Headline id="title" level={3} className="text-xl font-medium leading-snug text-primary">
            {event.title}
            </Headline> 
          <div>
            {event.description}
          </div>
        </div>
      </div>
    </a>
  </div>
  <div class="border-b w-full my-4 sm:my-2" />
</div>

<style>
  .hover\:bg-li:hover {
    background-color: rgba(203, 45, 62, 0.25);
  }
</style>
